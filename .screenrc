defutf8 on
utf8 on
defencoding utf8
encoding utf-8 utf-8
excape ^z^z
startup_message off

# max scroll number of lines
defscrollback 10000
termcapinfo xterm* ti@:te@

altscreen on

hardstatus alwayslastline "%?%h%:#%n %t @%H)%? %{= dd}%-035= %{= wB}%l %Y-%m-%d %02c:%s"
caption always "%{=r dd}%-Lw%40L>%?%F%{+b kG}%:[%{=r dd}%? %n%f %t %?%F%{-}%:]%?%+Lw"

autodetach on

escape ^z^z
bind ^x
bind x

defbce on
cjkwidth on
term xterm-256color

vbell off